<ContentDialog
    x:Class="UiLayer.FilterDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:domain="using:DomainLayer.Domain"
    Title="Filter Listings"
    PrimaryButtonText="Apply"
    SecondaryButtonText="Cancel">
    <StackPanel>
        <!-- Conditions ListView -->
        <TextBlock Text="Conditions:" FontWeight="Bold" Margin="0,10,0,0"/>
        <ListView x:Name="ConditionListView" SelectionMode="Multiple">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="domain:ProductCondition">
                    <StackPanel Orientation="Vertical" Padding="5">
                        <TextBlock Text="{x:Bind displayTitle}" FontWeight="Bold"/>
                        <TextBlock Text="{x:Bind description}" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Categories ListView -->
        <TextBlock Text="Categories:" FontWeight="Bold" Margin="0,10,0,0"/>
        <ListView x:Name="CategoryListView" SelectionMode="Multiple">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="domain:ProductCategory">
                    <StackPanel Orientation="Vertical" Padding="5">
                        <TextBlock Text="{x:Bind displayTitle}" FontWeight="Bold"/>
                        <TextBlock Text="{x:Bind description}" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Tags ListView -->
        <TextBlock Text="Tags:" FontWeight="Bold" Margin="0,10,0,0"/>
        <ListView x:Name="TagListView" SelectionMode="Multiple">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="domain:ProductTag">
                    <StackPanel Orientation="Vertical" Padding="5">
                        <TextBlock Text="{x:Bind displayTitle}" FontWeight="Bold"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</ContentDialog>
