<Window
    x:Class="UiLayer.BuyProductListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UiLayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Buy Product Listings"
    >

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Search and controls -->
            <RowDefinition Height="*" />   <!-- Listings -->
            <RowDefinition Height="Auto" /> <!-- Pagination -->
        </Grid.RowDefinitions>

        <!-- Search & Control Bar -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="SearchTextBox" 
                     Width="300" 
                     Margin="0,0,10,0"
                     PlaceholderText="Search by title, category, or tag..." />
            <Button x:Name="FilterButton" 
                    Content="&#x1F50D;"  
                    Width="40" Height="40" 
                    Margin="0,0,10,0"/>
            <Button x:Name="SortButton" 
                    Content="&#x2195;" 
                    Width="40" Height="40"/>
        </StackPanel>

        <!-- Buy Product Listings -->
        <ListView x:Name="BuyListView" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="5">
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" 
                                       FontWeight="Bold" 
                                       FontSize="16"/>
                            <TextBlock Text="{Binding Description}" 
                                       TextWrapping="Wrap" Margin="0,5,0,5"/>
                            <TextBlock Text="{Binding Price}" 
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Pagination Controls -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="0,10,0,0">
            <Button Content="Previous" Margin="5"/>
            <TextBlock Text="Page 1 of X" VerticalAlignment="Center" Margin="5"/>
            <Button Content="Next" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
