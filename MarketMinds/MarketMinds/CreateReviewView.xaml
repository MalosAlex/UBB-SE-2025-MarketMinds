<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MarketMinds.CreateReviewView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarketMinds"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    


    <Grid Padding="20" Background="Transparent">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Spacing="10" Width="1000">

            <!-- Seller Name -->
            <TextBlock Text="Seller:" FontWeight="Bold"/>
            <TextBlock Text="{x:Bind ViewModel.Seller.Username, Mode=OneWay}"/>

            <!-- Rating -->
            <TextBlock Text="Rating:" FontWeight="Bold"/>
            <RatingControl x:Name="RatingStars" Value="{x:Bind ViewModel.Rating, Mode=TwoWay}" 
               IsClearEnabled="True" IsReadOnly="False" MaxRating="5" 
               PlaceholderValue="0.5" />

            <!-- Description -->
            <TextBlock Text="Description:" FontWeight="Bold"/>
            <TextBox Text="{x:Bind ViewModel.Description, Mode=TwoWay}" AcceptsReturn="True" Height="250"  TextWrapping="Wrap"/>

            <!-- Image Links -->
            <TextBlock Text="Image Links:" FontWeight="Bold"/>
            <TextBox Text="{x:Bind ViewModel.ImagesString, Mode=TwoWay}" AcceptsReturn="True" Height="100" TextWrapping="Wrap"/>

            <!-- Confirm button -->
            <Button x:Name="ConfirmButton" Content="Publish Review" VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Width="150" Height="50" Click="handleSubmit_Click"/>
        </StackPanel>
    </Grid>
</Window>
