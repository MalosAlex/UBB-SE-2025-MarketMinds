<Window
    x:Class="UiLayer.AuctionProductListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UiLayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Auction Product Listings">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Search and controls -->
            <RowDefinition Height="Auto" /> <!-- Sorting dropdown -->
            <RowDefinition Height="*" />   <!-- Listings -->
            <RowDefinition Height="Auto" /> <!-- Pagination -->
        </Grid.RowDefinitions>

        <!-- Search & Control Bar -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBox x:Name="SearchTextBox" 
                     Width="300" 
                     Margin="0,0,10,0"
                     PlaceholderText="Search by title, category, or tag..."
                     TextChanged="SearchTextBox_TextChanged"/>
            <!-- Using Unicode for icons; replace with proper icons if needed -->
            <Button x:Name="FilterButton" 
                    Content="&#x1F50D;"  
                    Width="40" Height="40" 
                    Margin="0,0,10,0"
                    Click="FilterButton_Click"/>
            <Button x:Name="SortButton" 
                    Content="&#x2195;" 
                    Width="40" Height="40"
                    Click="SortButton_Click"/>
        </StackPanel>

        <!-- Sorting Dropdown (initially collapsed) -->
        <ComboBox x:Name="SortingComboBox" Grid.Row="1" Width="200" 
                  Visibility="Collapsed" 
                  SelectionChanged="SortingComboBox_SelectionChanged">
            <ComboBoxItem Content="Seller Rating (Best to Worst)" Tag="SellerRatingDesc"/>
            <ComboBoxItem Content="Seller Rating (Worst to Best)" Tag="SellerRatingAsc"/>
            <ComboBoxItem Content="Starting Price (Low to High)" Tag="StartingPriceAsc"/>
            <ComboBoxItem Content="Starting Price (High to Low)" Tag="StartingPriceDesc"/>
            <ComboBoxItem Content="Current Price (Low to High)" Tag="CurrentPriceAsc"/>
            <ComboBoxItem Content="Current Price (High to Low)" Tag="CurrentPriceDesc"/>
        </ComboBox>

        <!-- Auction Product Listings -->
        <ListView x:Name="AuctionListView" Grid.Row="2" ItemsSource="{x:Bind auctionProducts, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Gray" Padding="10" Margin="5">
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Margin="0,5,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Start: " FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding StartAuctionDate}"/>
                                <TextBlock Text="   End: " FontWeight="SemiBold" Margin="10,0,0,0"/>
                                <TextBlock Text="{Binding EndAuctionDate}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="Starting Price: $" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding StartingPrice}"/>
                                <TextBlock Text="   Current Price: $" FontWeight="SemiBold" Margin="10,0,0,0"/>
                                <TextBlock Text="{Binding CurrentPrice}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Pagination Controls -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3" Margin="0,10,0,0">
            <Button x:Name="PreviousButton" Content="Previous" Margin="5" Click="PreviousButton_Click"/>
            <TextBlock x:Name="PaginationTextBlock" Text="Page 1 of X" VerticalAlignment="Center" Margin="5"/>
            <Button x:Name="NextButton" Content="Next" Margin="5" Click="NextButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
